---
import { config } from "#/config";
---

<header
  class="fixed bottom-4 left-1/2 z-40 flex h-12 -translate-x-1/2 items-center gap-4 rounded-full bg-neutral-300/50 px-5 backdrop-blur-lg"
>
  <nav class="flex items-center justify-center gap-3">
    {
      config.navigations.map((nav) => (
        <a
          href={nav.link}
          class="font-medium opacity-50 transition-opacity duration-150 ease-in-out hover:opacity-100 whitespace-nowrap"
        >
          {nav.name}
        </a>
      ))
    }
  </nav>
</header>
